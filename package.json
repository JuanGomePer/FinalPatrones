{
  "name": "FinalPatrones",
  "version": "0.1.0",
  "description": "PoC chat real-time with WebSocket, RabbitMQ and Postgres",
  "main": "src/api/index.js",
  "scripts": {
    "start:api": "node src/api/index.js",
    "start:ws": "node src/ws/index.js",
    "start:worker": "node src/worker/consumer.js",
    "start": "concurrently \"npm:api\" \"npm:ws\" \"npm:worker\"",
    "api": "node src/api/index.js",
    "ws": "node src/ws/index.js",
    "worker": "node src/worker/consumer.js",
    "migrate": "psql \"$DATABASE_URL\" -f src/db/migrations.sql"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "concurrently": "^8.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.11.0",
    "uuid": "^9.0.0",
    "ws": "^8.13.0"
  },
  "engines": {
    "node": ">=18"
  }
}
