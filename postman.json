{
  "info": {
    "name": "Chat API with Auto Auth & UUID Rooms",
    "_postman_id": "chat-api-uuid",
    "description": "Postman collection for testing chat API with automatic JWT handling and dynamic UUID room IDs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"user2025858585\",\n  \"password\": \"pass123\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["auth", "register"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const jsonData = pm.response.json();",
              "    pm.collectionVariables.set('token', jsonData.token);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"user2025858585\",\n  \"password\": \"pass123\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["auth", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const jsonData = pm.response.json();",
              "    pm.collectionVariables.set('token', jsonData.token);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Create Room",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"General\",\n  \"is_private\": false,\n  \"password\": null\n}"
        },
        "url": {
          "raw": "http://localhost:3000/rooms",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["rooms"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const jsonData = pm.response.json();",
              "    pm.collectionVariables.set('roomId', jsonData.id);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "List Rooms",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://localhost:3000/rooms",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["rooms"]
        }
      }
    },
    {
      "name": "Join Room",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"password\": null\n}"
        },
        "url": {
          "raw": "http://localhost:3000/rooms/{{roomId}}/join",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["rooms", "{{roomId}}", "join"]
        }
      }
    },
    {
      "name": "Room Messages",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://localhost:3000/rooms/{{roomId}}/messages?page=1&pageSize=20",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["rooms", "{{roomId}}", "messages"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "pageSize", "value": "20" }
          ]
        }
      }
    }
  ],
  "variable": [
    { "key": "token", "value": "" },
    { "key": "roomId", "value": "" }
  ]
}
